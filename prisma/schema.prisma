// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.0.x", "darwin"]
}

generator prisma {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  PK         String       @id @default(cuid())
  username   String      @unique
  password   String
  email      String      @unique
  Admin      Admin?
   type       UserType
  NormalUser NormalUser?
  Superadmin Superadmin?
  Post Post[]
}

model Admin {
  PK               String  @id @default(cuid())
  FK               User?   @relation(fields: [userPK], references: [PK])
  permission_level Int?    @default(1)
  userPK           String? @unique
}

model NormalUser {
  PK               String  @id @default(cuid())
  FK               User?   @relation(fields: [userPK], references: [PK])
  permission_level Int?    @default(0)
  userPK           String? @unique
}

model Superadmin {
  PK               String  @id @default(cuid())
  FK               User?   @relation(fields: [userPK], references: [PK])
  permission_level Int?    @default(2)
  userPK           String? @unique
}

enum UserType {
  normalUser
  admin
  superAdmin
}

model Post {
  PK       String  @id @default(cuid())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [PK])
  authorId  String?
}